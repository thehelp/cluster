{
  "name": "thehelp-cluster",
  "version": "0.2.4",
  "main": "src/server/index.js",

  "dependencies": {
    "thehelp-core": "2.x",
    "thehelp-last-ditch": "1.x",
    "thehelp-log-shim": "1.x"
  },
  "devDependencies": {
    "agentkeepalive": "0.2.2",
    "blanket": "1.1.6",
    "express": "4.10.0",
    "grunt": "0.4.5",
    "morgan": "1.3.2",
    "rimraf": "2.2.8",
    "socket.io": "1.1.0",
    "socket.io-client": "1.1.0",
    "supertest": "0.14.0",
    "thehelp-project": "3.3.1",
    "thehelp-test": "3.3.0",
    "winston": "0.8.1"
